<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PhoneDialerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-7dp"
        tools:layout_editor_absoluteY="120dp">

        <!-- EditText care nu poate fi editat manual de utilizator
        android:enabled="false"
        android:inputType="none"
        -->
        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:enabled="false"
            android:inputType="none"
            android:text=""/>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            app:columnCount="3"
            app:rowCount="6"
            tools:visibility="visible">

            <Button
                android:id="@+id/button_1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="1"
                app:layout_column="0"
                app:layout_row="1" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="2"
                app:layout_column="1"
                app:layout_row="1"/>

            <Button
                android:id="@+id/button_3"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="3"
                app:layout_column="2"
                app:layout_row="1"/>

            <Button
                android:id="@+id/button_4"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="4"
                app:layout_column="0"
                app:layout_row="2" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="5"
                app:layout_column="1"
                app:layout_row="2"/>

            <Button
                android:id="@+id/button_6"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="6"
                app:layout_column="2"
                app:layout_row="2"/>

            <Button
                android:id="@+id/button_7"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="7"
                app:layout_column="0"
                app:layout_row="3" />

            <Button
                android:id="@+id/button_8"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="8"
                app:layout_column="1"
                app:layout_row="3"/>

            <Button
                android:id="@+id/button_9"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="9"
                app:layout_column="2"
                app:layout_row="3"/>

            <Button
                android:id="@+id/button_star"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="*"
                app:layout_column="0"
                app:layout_row="4"/>

            <Button
                android:id="@+id/button_0"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="0"
                app:layout_column="1"
                app:layout_row="4" />

            <Button
                android:id="@+id/button_hashtag"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="#"
                app:layout_column="2"
                app:layout_row="4"/>

            <ImageButton
                android:id="@+id/imageButton_call"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/call"
                app:layout_column="0"
                app:layout_gravity="center"
                app:layout_row="5" />

            <ImageButton
                android:id="@+id/imageButton_endcall"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/hangup"
                app:layout_column="2"
                app:layout_gravity="center"
                app:layout_row="5" />

            <ImageButton
                android:id="@+id/imageButton_backspace"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/backspace"
                app:layout_column="2"
                app:layout_gravity="center"
                app:layout_row="0" />
        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>